<table class="table table-striped table-hover table-sm">
  <thead class="thead-dark">
    <tr>
      <th scope="col"></th>
      <th scope="col">Title</th>
      <th scope="col">Email</th>
      <th scope="col">Cred</th>
      <th scope="col">URL</th>
      <th scope="col">Contact</th>
      <th scope="col">Note</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody id="list-table">
    {{#each passports as |passport|}}
    <tr>
        <td><button id="{{passport._id}}-show" class="btn btn-warning" data-toggle="modal" data-target="#showPassportModal">Open</button></td>
        <td>{{passport.title}}</td>
        <td>{{passport.email}}</td>
        <td>{{passport.cred}}</td>
        <td>{{passport.url}}</td>
        <td>{{passport.contact}}</td>
        <td>{{passport.note}}</td>
        <td><button id="{{passport._id}}-edit" class="btn btn-warning" data-toggle="modal" data-target="#updatePassportModal">Edit</button></td>
        <td><button id="{{passport._id}}-delete" class="btn btn-danger">Delete</button></td>
  </tr>
    {{/each}}
  </tbody>
</table>
